      <!-- /column -->
      <div class="col-md-4 col-lg-3">
        <div class="widget">
          <h4 class="widget-title text-white mb-3">Kurumsal</h4>
          <ul class="list-unstyled  mb-0">
            <li><a href="/about">Hakkımızda</a></li>
            <li><a href="/price">Fiyatlandırma</a></li>
            <li><a href="/cookie">Şartlar ve koşullar</a></li>
            <li><a href="/contact">İletişim</a></li>
          </ul>
        </div>
        <!-- /.widget -->
      </div>
      <!-- /column -->
      <div class="col-md-12 col-lg-3">
        <div class="widget">
          <h4 class="widget-title text-white mb-3">Blog</h4>
          <% if (blogFooterList && blogFooterList.length > 0) { %>
            <div class="widget">
              <% const lastThreeBlogs = blogFooterList.slice(-3); %>
              <% lastThreeBlogs.forEach(blog => { %>
                <p class="mb-5"><a href="/blog/<%= blog.slug %>"><%= blog.title %></a></p>
              <% }) %>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</footer>
